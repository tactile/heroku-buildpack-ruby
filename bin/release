#!/usr/bin/env ruby

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  config_yml = YAML.parse(pack.release)
  config_yml["config_vars"]["LD_LIBRARY_PATH"] = "vendor/libwbxml/lib:$LD_LIBRARY_PATH"
  puts config_yml.to_yaml
end

